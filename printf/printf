#include <stdarg.h>
#include <stdio.h>

int _printf(const char *format, ...) {
va_list args;
va_start(args, format);
int count = 0;

while (*format) {
if (*format == '%') {
format++;
switch (*format) {
case 'c':
putchar(va_arg(args, int));
count++;
break;
case 's':
count += printf("%s", va_arg(args, const char *));
break;
case '%':
putchar('%');
count++;
break;
default:
break;
}
} else {
putchar(*format);
count++;
}
format++;
}

va_end(args);
return count;
}

int main() {
_printf("Hello, %s! The character is %c and %% is a percent sign.\n", "user", 'A');
return 0;
}
